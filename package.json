{
  "name": "OOTP-Logo-Maker",
  "productName": "OOTP Logo Maker",
  "version": "0.1.0",
  "description": "OOTP Logo Maker",
  "main": "main.js",
  "repository": "https://github.com/eriqjaffe/OOTP-Logo-Maker",
  "author": {
    "name": "Eriq Jaffe",
    "email": "eriqjaffe@gmail.com",
    "url": "https://github.com/eriqjaffe/OOTP-Logo-Maker"
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "electron": "^26.3.0",
    "electron-builder": "^23.6.0"
  },
  "dependencies": {
    "add-filename-increment": "^1.0.0",
    "chokidar": "^3.5.3",
    "color-sorter": "^6.0.0",
    "colorthief": "^2.4.0",
    "electron-store": "^8.1.0",
    "fontname": "^1.0.1",
    "hasbin": "^1.2.3",
    "imagemagick-cli": "^0.5.0",
    "jimp": "^0.22.8",
    "node-font2base64": "^0.9.2"
  },
  "build": {
    "appId": "com.ootputilities.uniformmaker",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "portable": {
      "artifactName": "${productName}_${version}_portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "artifactName": "${productName} ${version} setup.${ext}",
      "menuCategory": "OOTP Utilities",
      "shortcutName": "${productName}",
      "include": "build/installer.nsh",
      "uninstallDisplayName": "${productName} ${version}",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "tar.gz"
      ]
    },
    "deb": {}
  }
}
